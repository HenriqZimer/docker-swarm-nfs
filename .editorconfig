# EditorConfig para projeto Docker Swarm
root = true

# Configurações gerais
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space

# Docker Compose e YAML
[*.{yml,yaml}]
indent_size = 2
max_line_length = 80

# Dockerfile
[Dockerfile*]
indent_size = 4

# Scripts Shell
[*.{sh,bash}]
indent_size = 2

# Arquivos de configuração
[*.{json,jsonc}]
indent_size = 2

# Documentação
[*.md]
indent_size = 2
trim_trailing_whitespace = false

# Arquivos de ambiente
[.env*]
indent_size = 2

# Arquivos de texto
[*.txt]
indent_size = 2
